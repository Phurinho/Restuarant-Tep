<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admim Home</title>
    <!-- box icon link -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@lastest/css/boxicons.min.css">

    <!-- remix icons link -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />

    <!-- google font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">


    <!-- link css -->
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="stylesheet" href="/css/admin.css" type="text/css">
    
    

</head>

<body>
     <!-- header -->
     <%- include('./../components/navbar') %>

    
    <section class="layer">
        <div class="container">
             <!-- Search Bar -->
            <form class="search-form" action="/admin" method="post">
                <input type="text" name="username" id="username" class="search-input" placeholder="Search posts...">
                <button type="submit" class="search-button"> <i class="ri-search-line"></i> Search</button>
            </form>

            <!-- Post -->
            <div class="container-post">
                <% orders.forEach(order => { %>
                    <div class="post">
                        <h2 class="post-title"><%= order.menu %></h2>
                        <h3 class="post-subtitle"><%= order.description %></h3>
                        <p class="meta">
                            Order by <a href="#"><%= order.username %></a> on <%= order.createdAt.toLocaleTimeString('en-US') %>
                        </p>
                        <p>Tel. <%= order.tel %></p>
                        <div class="post-actions">
                            <a href="admin/edit/<%= order.id %>" class="edit-button"><i class="ri-edit-line"></i> Edit</a>
                            <form action="/admin/<%= order.id %>?_method=DELETE" method="post">
                                <button class="delete-button"><i class="ri-delete-bin-line"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- footer -->
    <%- include('./../components/footer') %>
   

</body>

</html>
